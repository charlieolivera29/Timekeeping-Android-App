<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/margin_lg"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorWhiteSmoke"
        app:cardElevation="@dimen/margin_sm">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin_sm"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_sm"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_sm"
                    android:text="Employee #"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/h6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_sm"
                    android:text="Role"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/h6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_sm"
                    android:text="Contact Number"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/h6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_sm"
                    android:text="Schedule"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/h6" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_sm"
                    android:text="Company"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/h6" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_sm"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/approvee_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_sm"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/h6" />

                <TextView
                    android:id="@+id/approvee_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_sm"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/h6" />


                <TextView
                    android:id="@+id/approvee_cell_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_sm"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/h6" />


                <TextView
                    android:id="@+id/approvee_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_sm"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/h6" />

                <TextView
                    android:id="@+id/approvee_company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_sm"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/h6" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>