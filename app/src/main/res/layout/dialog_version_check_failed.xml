<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_xxl"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/anchr_cloud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cloud_off_black_50dp"
            android:contentDescription="@string/no_result" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Something went wrong!"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/h6" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_xxl"
            android:gravity="center"
            android:text="We were unable to check your version."
            android:textSize="@dimen/h6" />

        <android.support.v7.widget.CardView
            android:id="@+id/cv_retry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_sm"
            app:cardBackgroundColor="@color/colorPrimaryDark"
            app:cardCornerRadius="@dimen/m5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/m4"
                android:layout_marginTop="@dimen/margin_sm"
                android:layout_marginRight="@dimen/m4"
                android:layout_marginBottom="@dimen/margin_sm"
                android:text="Retry"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/h6"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cv_close_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_lg"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/m5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/m4"
                android:layout_marginTop="@dimen/margin_sm"
                android:layout_marginRight="@dimen/m4"
                android:layout_marginBottom="@dimen/margin_sm"
                android:text="Close App"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/h6"
                android:textStyle="bold" />


        </android.support.v7.widget.CardView>

    </LinearLayout>
</RelativeLayout>