<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/try_again_layout"
        layout="@layout/fragment_try_again"
        android:visibility="gone" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/dashboard_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/try_again_layout_v2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryLight"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/anchr_try_again_txt"
                        android:layout_toLeftOf="@+id/anchr_try_again_txt"
                        android:src="@drawable/ic_refresh_black_24dp" />

                    <TextView
                        android:id="@+id/anchr_try_again_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Try Again"
                        android:textColor="@color/colorBlack" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/anchr_fragment_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_sm"
                        android:layout_marginLeft="@dimen/margin_sm"
                        android:layout_marginTop="@dimen/margin_sm"
                        android:layout_marginBottom="@dimen/margin_lg"
                        android:text="Dashboard"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/h3P5"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/ll_daily_edtr_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/margin_sm"
                            android:layout_marginLeft="@dimen/margin_sm"
                            android:layout_marginTop="@dimen/margin_sm"
                            android:text="EDTR"
                            android:id="@+id/tv_daily_edtr_title"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/h5"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="@dimen/margin_sm"
                            android:layout_marginLeft="@dimen/margin_sm"
                            android:text="Click the card to clock in or out"
                            android:textSize="@dimen/h6" />


                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_lg"
                            android:stretchColumns="*"
                            android:visibility="visible">

                            <TableRow>

                                <android.support.v7.widget.CardView
                                    android:id="@+id/cv_time_in"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/margin_sm"
                                    app:cardCornerRadius="@dimen/cardview_radius"
                                    app:cardElevation="@dimen/cardview_elevation">

                                    <android.support.constraint.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="@dimen/margin_sm"
                                            android:orientation="vertical"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintLeft_toLeftOf="parent"
                                            app:layout_constraintRight_toLeftOf="@+id/anchr_clock1"
                                            app:layout_constraintTop_toTopOf="parent">

                                            <TextView
                                                android:id="@+id/tv_time_in"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:text="@string/blank_time"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="@dimen/h4" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:text="Time in"
                                                android:textSize="@dimen/h6" />
                                        </LinearLayout>

                                        <ImageView
                                            android:id="@+id/anchr_clock1"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="@dimen/margin_sm"
                                            android:src="@drawable/ic_access_time_black_24dp"
                                            app:layout_constraintRight_toRightOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />

                                    </android.support.constraint.ConstraintLayout>
                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:id="@+id/cv_time_out"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"

                                    android:layout_margin="@dimen/margin_sm"
                                    app:cardCornerRadius="@dimen/cardview_radius"
                                    app:cardElevation="@dimen/cardview_elevation">

                                    <android.support.constraint.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <LinearLayout
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="@dimen/margin_sm"
                                            android:orientation="vertical"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintLeft_toLeftOf="parent"
                                            app:layout_constraintRight_toLeftOf="@+id/anchr_clock2"
                                            app:layout_constraintTop_toTopOf="parent">

                                            <TextView
                                                android:id="@+id/tv_time_out"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:text="@string/blank_time"
                                                android:textColor="@color/colorBlack"
                                                android:textSize="@dimen/h4" />

                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center_vertical"
                                                android:text="Time out"
                                                android:textSize="@dimen/h6" />
                                        </LinearLayout>

                                        <ImageView
                                            android:id="@+id/anchr_clock2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="@dimen/margin_sm"
                                            android:src="@drawable/ic_access_time_black_24dp"
                                            app:layout_constraintRight_toRightOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />

                                    </android.support.constraint.ConstraintLayout>

                                </android.support.v7.widget.CardView>
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/margin_sm"
                        android:layout_marginLeft="@dimen/margin_sm"
                        android:layout_marginTop="@dimen/margin_sm"
                        android:text="Summary"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/h5"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_sm"
                            android:layout_marginLeft="@dimen/margin_sm"
                            android:layout_marginTop="@dimen/margin_sm"
                            android:layout_marginEnd="@dimen/margin_xs"
                            android:layout_marginRight="@dimen/margin_xs"
                            android:layout_marginBottom="@dimen/margin_sm"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#FF3131"
                            app:cardCornerRadius="@dimen/cardview_radius"
                            app:cardElevation="@dimen/cardview_default_elevation">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/margin_lg"
                                    android:layout_marginLeft="@dimen/margin_lg"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/lates_today"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="0"
                                            android:textColor="#FFF"
                                            android:textSize="@dimen/h3" />

                                        <TextView
                                            android:id="@+id/tv_lates_today_minhours"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical"
                                            android:textColor="#FFF"
                                            android:textSize="@dimen/h5" />
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginBottom="10dp"
                                        android:gravity="center_vertical"
                                        android:text="Late (Today)"
                                        android:textColor="#FFF"
                                        android:textSize="@dimen/h5"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </FrameLayout>

                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_xs"
                            android:layout_marginLeft="@dimen/margin_xs"
                            android:layout_marginTop="@dimen/margin_sm"
                            android:layout_marginEnd="@dimen/margin_sm"
                            android:layout_marginRight="@dimen/margin_sm"
                            android:layout_marginBottom="@dimen/margin_sm"
                            android:layout_weight="1"
                            app:cardBackgroundColor="#FFFF00"
                            app:cardCornerRadius="@dimen/cardview_radius"
                            app:cardElevation="@dimen/cardview_default_elevation">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/margin_lg"
                                    android:layout_marginLeft="@dimen/margin_lg"
                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/undertime_today"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="0"
                                            android:textColor="#1f2435"
                                            android:textSize="@dimen/h3" />

                                        <TextView
                                            android:id="@+id/tv_undertime_today_minhours"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical"
                                            android:textColor="#1f2435"
                                            android:textSize="@dimen/h5" />
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginBottom="10dp"
                                        android:gravity="center_vertical"
                                        android:maxLines="1"
                                        android:text="Undertime (Today)"
                                        android:textColor="#1f2435"
                                        android:textSize="@dimen/h5"
                                        android:textStyle="bold" />
                                </LinearLayout>

                            </FrameLayout>

                        </android.support.v7.widget.CardView>
                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_lg"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_sm"
                            android:layout_marginLeft="@dimen/margin_sm"
                            android:layout_marginEnd="@dimen/margin_xs"
                            android:layout_marginRight="@dimen/margin_xs"
                            android:layout_marginBottom="@dimen/margin_sm"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/colorPending"
                            app:cardCornerRadius="@dimen/cardview_radius"
                            app:cardElevation="@dimen/cardview_default_elevation">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/margin_lg"
                                    android:layout_marginLeft="@dimen/margin_lg"

                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/lates_this_month"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center"
                                            android:text="0"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="@dimen/h3" />

                                        <TextView
                                            android:id="@+id/tv_lates_this_month_minhours"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="@dimen/h5" />
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginBottom="10dp"
                                        android:gravity="center_vertical"
                                        android:text="Lates (Month)"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="@dimen/h5"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </FrameLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_xs"
                            android:layout_marginLeft="@dimen/margin_xs"
                            android:layout_marginEnd="@dimen/margin_sm"
                            android:layout_marginRight="@dimen/margin_sm"
                            android:layout_marginBottom="@dimen/margin_sm"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/colorPrimaryDark"
                            app:cardCornerRadius="@dimen/cardview_radius"
                            app:cardElevation="@dimen/cardview_default_elevation">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/margin_lg"
                                    android:layout_marginLeft="@dimen/margin_lg"

                                    android:orientation="vertical">

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal">

                                        <TextView
                                            android:id="@+id/accumulated_today"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:text="0"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="@dimen/h3" />

                                        <TextView
                                            android:id="@+id/tv_accumulated_today_minhours"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:gravity="center_vertical"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="@dimen/h5" />
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginBottom="10dp"
                                        android:gravity="center_vertical"
                                        android:maxLines="1"
                                        android:text="Accumulated"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="@dimen/h5"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </FrameLayout>
                        </android.support.v7.widget.CardView>

                    </LinearLayout>
                </LinearLayout>


                <android.support.v7.widget.CardView
                    android:id="@+id/pending_approvals_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_xl"
                    android:layout_marginTop="@dimen/margin_xl"
                    android:layout_marginRight="@dimen/margin_xl"
                    android:visibility="gone"
                    app:cardCornerRadius="@dimen/cardview_default_radius"
                    app:cardElevation="@dimen/cardview_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_lg">

                        <TextView
                            android:id="@+id/tv_toggle_adjustments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_sm"
                            android:text="Pending Adjustments"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/h5"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_sm">

                            <FrameLayout
                                android:id="@+id/link_pending_time_adjustment_approvals"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_sm"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Time Adjustment Approvals"
                                    android:textSize="@dimen/h6" />

                                <android.support.v7.widget.CardView
                                    android:layout_width="@dimen/dashboard_card_count"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    app:cardBackgroundColor="@color/colorPrimary"
                                    app:cardCornerRadius="@dimen/dashboard_radius_card_count">

                                    <TextView
                                        android:id="@+id/time_adjustment_approvals_quantity"
                                        android:layout_width="wrap_content"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="2dp"
                                        android:gravity="center"
                                        android:text="0"
                                        android:textColor="@color/colorWhite"
                                        android:textStyle="bold" />

                                </android.support.v7.widget.CardView>
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/link_pending_approvals_overtime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_sm"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Overtime Approvals"
                                    android:textSize="@dimen/h6" />

                                <android.support.v7.widget.CardView
                                    android:layout_width="@dimen/dashboard_card_count"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    app:cardBackgroundColor="@color/colorPrimary"
                                    app:cardCornerRadius="@dimen/dashboard_radius_card_count">

                                    <TextView
                                        android:id="@+id/overtime_appprovals_quantity"
                                        android:layout_width="wrap_content"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="2dp"
                                        android:gravity="center"
                                        android:text="0"
                                        android:textColor="@color/colorWhite"
                                        android:textStyle="bold" />

                                </android.support.v7.widget.CardView>
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/link_pending_leaves_approvals"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Leave Approvals"
                                    android:textSize="@dimen/h6" />

                                <android.support.v7.widget.CardView
                                    android:layout_width="@dimen/dashboard_card_count"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    app:cardBackgroundColor="@color/colorPrimary"
                                    app:cardCornerRadius="@dimen/dashboard_radius_card_count">

                                    <TextView
                                        android:id="@+id/leave_approval_quantity"
                                        android:layout_width="wrap_content"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="2dp"
                                        android:gravity="center"
                                        android:text="0"
                                        android:textColor="@color/colorWhite"
                                        android:textStyle="bold" />

                                </android.support.v7.widget.CardView>
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/link_pending_edtr_approvals"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/h5"
                                android:orientation="horizontal"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Time Appoval"
                                    android:textSize="@dimen/h6" />

                                <android.support.v7.widget.CardView
                                    android:layout_width="@dimen/h3"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="end"
                                    app:cardBackgroundColor="@color/colorPrimary"
                                    app:cardCornerRadius="10dp">

                                    <TextView
                                        android:id="@+id/approvals_quantity"
                                        android:layout_width="wrap_content"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="2dp"
                                        android:gravity="center"
                                        android:text="0"
                                        android:textColor="@color/colorWhite"
                                        android:textStyle="bold" />

                                </android.support.v7.widget.CardView>
                            </FrameLayout>
                        </LinearLayout>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_xl"
                    app:cardCornerRadius="@dimen/cardview_default_radius"
                    app:cardElevation="@dimen/cardview_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorWhite"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_lg">

                        <TextView
                            android:id="@+id/tv_toggle_request"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_sm"
                            android:text="Pending Request"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/h5"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:id="@+id/pending_requests_container"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite"
                            android:orientation="vertical"
                            android:padding="@dimen/margin_sm">

                            <FrameLayout
                                android:id="@+id/link_pending_time_adjustment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_sm"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Time Adjustment Request"
                                    android:textSize="@dimen/h6" />

                                <android.support.v7.widget.CardView
                                    android:layout_width="@dimen/dashboard_card_count"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    app:cardBackgroundColor="@color/colorPrimary"
                                    app:cardCornerRadius="@dimen/dashboard_radius_card_count">

                                    <TextView
                                        android:id="@+id/time_adjustment_quantity"
                                        android:layout_width="wrap_content"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="2dp"
                                        android:gravity="center"
                                        android:text="0"
                                        android:textColor="@color/colorWhite"
                                        android:textSize="@dimen/h6"
                                        android:textStyle="bold" />

                                </android.support.v7.widget.CardView>
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/link_pending_overtime"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/margin_sm"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Overtime Request"
                                    android:textSize="@dimen/h6" />

                                <android.support.v7.widget.CardView
                                    android:layout_width="@dimen/dashboard_card_count"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    app:cardBackgroundColor="@color/colorPrimary"
                                    app:cardCornerRadius="@dimen/dashboard_radius_card_count">

                                    <TextView
                                        android:id="@+id/overtime_request_quantity"
                                        android:layout_width="wrap_content"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="2dp"
                                        android:gravity="center"
                                        android:text="0"
                                        android:textColor="@color/colorWhite"
                                        android:textStyle="bold" />

                                </android.support.v7.widget.CardView>
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/link_pending_leaves"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:text="Leave Request"
                                    android:textSize="@dimen/h6" />

                                <android.support.v7.widget.CardView
                                    android:layout_width="@dimen/dashboard_card_count"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end"
                                    app:cardBackgroundColor="@color/colorPrimary"
                                    app:cardCornerRadius="@dimen/dashboard_radius_card_count">

                                    <TextView
                                        android:id="@+id/leave_request_quantity"
                                        android:layout_width="wrap_content"
                                        android:layout_height="25dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="2dp"
                                        android:gravity="center"
                                        android:text="0"
                                        android:textColor="@color/colorWhite"
                                        android:textStyle="bold" />

                                </android.support.v7.widget.CardView>
                            </FrameLayout>

                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</RelativeLayout>