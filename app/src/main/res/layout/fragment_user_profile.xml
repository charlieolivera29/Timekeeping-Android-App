<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_lg">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_sm"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:dividerHeight="0.0px"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardPreventCornerOverlap="false"
                    app:elevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_sm">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_sm"
                            android:text="Timekeeping Details"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/h5"
                            android:textStyle="bold" />

                        <TableLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            android:layout_marginStart="@dimen/margin_sm"
                            android:layout_marginLeft="@dimen/margin_sm"
                            android:stretchColumns="1">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_marginBottom="@dimen/margin_sm">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Bundee:"
                                    android:textSize="@dimen/h6" />

                                <TextView
                                    android:id="@+id/tv_user_profile_bundee"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_sm"
                                    android:layout_marginLeft="@dimen/margin_sm"
                                    android:text="- - -"
                                    android:textColor="#000"
                                    android:textSize="@dimen/h6"
                                    android:textStyle="bold" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_marginBottom="@dimen/margin_sm">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Work Location:"
                                    android:textSize="@dimen/h6" />

                                <TextView
                                    android:id="@+id/tv_user_profile_location"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_sm"
                                    android:layout_marginLeft="@dimen/margin_sm"
                                    android:text="- - -"
                                    android:textColor="#000"
                                    android:textSize="@dimen/h6"
                                    android:textStyle="bold" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_marginBottom="@dimen/margin_sm">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Assigned Kiosks:"
                                    android:textSize="@dimen/h6" />

                                <TextView
                                    android:id="@+id/tv_user_profile_assgin_location"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_sm"
                                    android:layout_marginLeft="@dimen/margin_sm"
                                    android:text="- - -"
                                    android:textColor="#000"
                                    android:textSize="@dimen/h6"
                                    android:textStyle="bold" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_marginBottom="@dimen/margin_sm">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Approver:"
                                    android:textSize="@dimen/h6" />

                                <TextView
                                    android:id="@+id/tv_user_profile_approver"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/margin_sm"
                                    android:layout_marginLeft="@dimen/margin_sm"
                                    android:text="- - -"
                                    android:textColor="#000"
                                    android:textSize="@dimen/h6"
                                    android:textStyle="bold" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_sm"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:dividerHeight="0.0px"
                    android:padding="@dimen/margin_sm"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardPreventCornerOverlap="false"
                    app:elevation="@dimen/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/margin_sm">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_sm"
                            android:text="Schedule"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/h5"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TableLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:stretchColumns="1">

                                    <TableRow
                                        android:layout_width="match_parent"
                                        android:layout_marginBottom="@dimen/margin_sm">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/margin_sm"
                                            android:layout_marginLeft="@dimen/margin_sm"
                                            android:text="Schedule:"
                                            android:textSize="@dimen/h6" />

                                        <TextView
                                            android:id="@+id/tv_user_profile_sched"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/margin_sm"
                                            android:layout_marginLeft="@dimen/margin_sm"
                                            android:layout_weight="1"
                                            android:text="- - -"
                                            android:textColor="#000"
                                            android:textSize="@dimen/h6"
                                            android:textStyle="bold" />
                                    </TableRow>

                                    <TableRow
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="@dimen/margin_sm">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/margin_sm"
                                            android:layout_marginLeft="@dimen/margin_sm"
                                            android:text="Days:"
                                            android:textSize="@dimen/h6" />

                                        <TextView
                                            android:id="@+id/tv_user_profile_day_sched"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/margin_sm"
                                            android:layout_marginLeft="@dimen/margin_sm"
                                            android:layout_weight="1"
                                            android:text="- - -"
                                            android:textColor="#000"
                                            android:textSize="@dimen/h6"
                                            android:textStyle="bold" />

                                    </TableRow>
                                </TableLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </ScrollView>

        <include
            android:id="@+id/img_edit_profile"
            layout="@layout/includes_fab_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_margin="@dimen/margin_sm" />

    </FrameLayout>

</LinearLayout>