<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="actionMenuTextColor">@color/colorWhite</item>
        <item name="actionMenuTextAppearance">@color/colorWhite</item>
    </style>

    <style name="Progressbar">

        <item name="colorAccent">@color/colorWhite</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppCompatButtonSuccess" parent="Base.TextAppearance.AppCompat.Button" >
        <item name="backgroundTint">@color/colorSuccess</item>
    </style>

    <style name="AppCompatButtonPrimary" parent="Base.TextAppearance.AppCompat.Button" >
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="AppCompatButtonError" parent="Base.TextAppearance.AppCompat.Button" >
        <item name="backgroundTint">@color/colorError</item>
    </style>

    <style name="Dialog_Fullscreen_with_Animation" parent="AppTheme.NoActionBar">
        <item name="android:windowAnimationStyle">@style/CustomDialogAnimation</item>
    </style>

    <style name="CustomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/translate_left_side</item>
        <item name="android:windowExitAnimation">@anim/translate_right_side</item>
    </style>

</resources>
